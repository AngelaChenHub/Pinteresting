<div class="container">
  <h1>Listing pins</h1>

  <table>
    <thead>
      <tr>
        <th>Description</th>
<!--         <th>String</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <!-- No equal sign because you aren't showing anything on the page -->
      <!-- Creates a loop with |pipe| -->
      <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.string %></td>
        <td><%= link_to 'Show', pin %></td>
        <!-- (pin) pulls the ID number -->
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td> 
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Confirm deletion of Pin?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pin', new_pin_path %>

</div>
